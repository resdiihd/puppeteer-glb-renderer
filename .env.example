# GLB Renderer Server Configuration

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Domain Configuration (REQUIRED for SSL)
DOMAIN=3d.itsoa.io.vn
ACME_EMAIL=admin@itsoa.io.vn

# Cloudflare API Token (REQUIRED for SSL)
# Get from: https://dash.cloudflare.com/profile/api-tokens
# Permissions: Zone:DNS:Edit, Zone:Zone:Read for your domain
CLOUDFLARE_API_TOKEN=3YeqmF46MSojOcJ6zi7rjlQpyKZGC-cXRLgO_AWj

# Puppeteer Configuration
PUPPETEER_TIMEOUT=900000
PUPPETEER_HEADLESS=true
PUPPETEER_DISABLE_DEV_SHM_USAGE=true
PUPPETEER_NO_SANDBOX=true

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/app/uploads
RENDER_PATH=/app/renders

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
JWT_SECRET=your-super-secret-jwt-key-here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# SSL Configuration (Auto-managed by Let's Encrypt)
SSL_CERT_PATH=/etc/letsencrypt/live/${DOMAIN}/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/${DOMAIN}/privkey.pem

# Performance Tuning
RENDER_QUEUE_CONCURRENCY=2
MAX_RENDER_TIME=900000
MEMORY_LIMIT=2GB

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000